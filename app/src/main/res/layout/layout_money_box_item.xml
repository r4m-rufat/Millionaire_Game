<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shadow_variant_item_line_gradient"
        android:rotation="180" />

    <View
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shadow_variant_item_line_gradient" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_variant_box"
            app:shapeAppearance="@style/CutCorners"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="$ 7,500"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/shadow_variant_item_top_line_gradient" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:rotation="180"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_variant_item_top_line_gradient" />

</RelativeLayout>