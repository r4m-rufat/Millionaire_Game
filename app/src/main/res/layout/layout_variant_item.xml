<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="50dp">

    <View
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shadow_variant_item_line_gradient"
        android:rotation="180" />

    <View
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shadow_variant_item_line_gradient" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_variant_box"
            app:shapeAppearance="@style/CutCorners"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/variant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="25dp"
            android:text="A:"
            android:textColor="#FFF200"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/variant_type"
            android:paddingLeft="10dp"
            android:text="New York City"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/shadow_variant_item_top_line_gradient" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:rotation="180"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_variant_item_top_line_gradient" />

</RelativeLayout>