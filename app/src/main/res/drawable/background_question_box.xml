<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="-3dp"
        android:right="-3dp">

        <shape android:shape="rectangle">

            <gradient
                android:angle="90"
                android:startColor="#194673"
                android:endColor="#194673"
                android:centerColor="#03113B"/>

            <stroke android:width="3dp"
                android:color="@color/white"/>

        </shape>

    </item>

</layer-list>